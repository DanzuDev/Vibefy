{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "index.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/leaderboard",
      "dest": "/frontend/leaderboard.html"
    },
    {
      "src": "/api/leaderboard",
      "dest": "/backend/server.js"
    },
    {
      "src": "/",
      "dest": "/index.html"
    }
  ]
}
